{
  "name": "smart-tool-of-knowing",
  "version": "1.0.0",
  "description": "CLI to track your team's Linear workspace activity with AI-powered summarization",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "team": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "dev:dashboard": "nodemon --exec ts-node src/dashboard-app.ts",
    "build:dashboard": "tsc -p tsconfig.dashboard.json",
    "start:dashboard": "node dist/dashboard-app.js",
    "api-server": "node dist/simple-api-server.js",
    "test": "jest",
    "test:dashboard": "jest --config jest-dashboard.config.cjs",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node-fetch": "^2.6.12",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.9.0",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "inquirer": "^9.2.12",
    "node-fetch": "^3.3.2",
    "openai": "^4.20.1",
    "ora": "^7.0.1",
    "sqlite3": "^5.1.7",
    "table": "^6.8.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.10.1",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/compression": "^1.7.3",
    "@types/pg": "^8.10.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/lodash": "^4.14.198",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "linear",
    "cli",
    "team",
    "productivity",
    "ai",
    "summarization"
  ],
  "author": "",
  "license": "MIT"
}
